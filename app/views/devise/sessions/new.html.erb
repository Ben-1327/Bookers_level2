<head>
  <%= render 'homes/list' %>
  <%= stylesheet_link_tag 'sessions_new' %>
</head>

<body>
  <div class="form">
    <h2 class="top-text">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :name, class:"label" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"text_field" %>
      </div>

      <div class="field">
        <%= f.label :password, class:"label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"text_field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class:"btn-submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <p class="Co-text">CopyRight Infratop.inc</p>
</body>
