<%= render 'homes/list' %>
<%= stylesheet_link_tag 'books_edit' %>

<!-- サクセスメッセージ -->
<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

<div class="main-contents">
  <h2 class="top-text">Editing Book</h2>
  <%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h4>Title</h4>
  <%= f.text_field :title, class:"form-title" %>
  <h4>Opinion</h4>
  <%= f.text_area :body, class:"form-opinion" %>
  <br>
  <% if @user.id == current_user.id %>
    <%= f.submit "Update Book", class:"btn-submit" %>
  <% end %>
  <% end %>
  <p>
    <%= link_to "Show", book_path(@book) %>
    <%= link_to "Back", books_path %>
  </p>
</div>
