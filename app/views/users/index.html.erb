<%= render 'homes/list' %>
<%= stylesheet_link_tag 'users_show' %>

<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <div class="user-info">
        <h2 class="top-text">User info</h2>
        <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-for-info", fallback: "no_image.jpg" %>
        <table class="user-info-text">
          <tr>
            <th>Name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>Introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </table>
        <p class="btn-edit"><%= link_to "プロフィール編集", edit_user_path(current_user), class: "pull-right" %></p>
      </div>
      <div class="new-book">
        <h2 class="top-text">New book</h2>
        <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <h4>Title</h4>
        <%= f.text_field :title, class:"form-title" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class:"form-opinion" %>
        <br>
        <%= f.submit "Create Book", class:"btn-submit" %>
      <% end %>
    </div>
  </div>
  <div class="col-xs-8">
    <h2 class="top-text">Users</h2>
    <table>
      <tr class="title-tr">
        <th>image</th>
        <th>name</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-for-book", fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "Show", user_path(user) %>
          </td>
        </tr>
    <% end %>
    </table>
  </div>
</div>
</div>
