<%= stylesheet_link_tag 'homes_list' %>
<header>
    <div class="container">
      <nav class="nav navbar-nav navbar-left">
        <span class="title">Bookers</span>
      </nav>
      <% if user_signed_in? %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Home", user_path(current_user), class:"glyphicon glyphicon-current_user current_user" %>
          </li>
          <li>
            <%= link_to "Users", users_path, class:"glyphicon glyphicon-user user" %>
          </li>
          <li>
            <%= link_to "Books", books_path, class:"glyphicon glyphicon-books books" %>
          </li>
          <li>
            <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-destroy destroy" %>
          </li>
        </ul>
      </nav>
      <% else %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Home", root_path, class:"glyphicon glyphicon-home home" %>
          </li>
          <li>
            <%= link_to "About", home_about_path, class:"glyphicon glyphicon-link about" %>
          </li>
          <li>
              <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-sign_up sign_up" %>
          </li>
          <li>
              <%= link_to "login", new_user_session_path, class:"glyphicon glyphicon-login login" %>
          </li>
        </ul>
      </nav>
      <% end %>
    </div>
</header>
